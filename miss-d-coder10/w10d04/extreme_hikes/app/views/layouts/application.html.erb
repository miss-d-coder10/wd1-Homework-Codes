<!DOCTYPE html>
<html>
  <head>
    <title>ExtremeHikes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav>
        <div class="container">
          <ul>
            <li><%= link_to "ExtremeHikes", root_path %></li>
            <li><%= link_to "Home", root_path %></li>
            <% if logged_in? %>
              <li><%= link_to 'Logout', logout_path, method: :delete, data: {confirm: 'Continue to log out'} %></li>
            <% else %>
              <li><%= link_to "Register", register_path %></li>
              <li><%= link_to "Login", login_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <div class="welcomeMgs">Welcome, <%= current_user.username %></li>
  </div>
      <% flash.each do |name, message| %>
        <div class="flash-message flash-message-<%= name %>">
          <%= message %>
        </div>
      <% end %>
    <%= yield %>
  </body>
</html>
